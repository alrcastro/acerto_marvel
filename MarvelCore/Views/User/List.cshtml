@model List<SearchHistory>
    
<div class="container">
    <br />
    <h2> Historico de Pesquisas</h2>
    <br />
    @if (Model.Count == 0)
    {
        <span> Não há nenhuma pesquisa </span>
    }
    else
    {
        <div class="row col-md-6 col-md-offset-2 custyle">
            <table class="table table-striped custab">
                <thead>
                    <tr>
                        <th>Pesquisa</th>
                        <th>Data</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.Input</td>
                    <td>@item.SearchDate.ToString("dd/MM/yyyy hh:mm")</td>
                    <td><a href="@Url.Action("DeleteHistory",new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Deletar </a></td>
                </tr>
                   }

            </table>
        </div>
    }
</div>
